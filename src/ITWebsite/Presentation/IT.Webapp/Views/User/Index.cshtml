@model IEnumerable<IT.Business.Models.UserModel>

@{
    ViewData["Title"] = "Services";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IT Consulting</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IT.Webapp.styles.css" asp-append-version="true" />
</head>
<div class="container">
    <div class="row align-items-start">
        <div class="col">
            <h2>Our Services</h2>
        </div>
        <div class="col">
            <form asp-action="Index">
                <input type="text" name="search" class="form-control" />
                <br />
                <input type="submit" value="search" class="btn btn-primary" />
                
            </form>
        </div>

    </div>
 </div>



 

        @foreach (var item in Model) {
       
                     
                                <div class="card" style="width: 18rem; background-color:lightblue;">
                                      <div class="card-body">
                                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                      </div>     
                                </div>
                            
                           
                              <div class="row align-items-start">
                                  <div class="alignment">
                                  @Html.ActionLink("Edit", "Edit", new {  id=item.id},
                                        new { @class = "btn btn-primary" ,@style = "color:white;"})
                                        @Html.ActionLink("Delete", "Delete", new {  id=item.id}, 
                                        new { @class = "btn btn-primary" ,@style = "color:white;"})
                           
                                 </div>
                       
                             </div>
                            
                    
                    
                      
                        
                           
                            
                      
        
        }
        <div class="container">
                         <div class="row align-items-start">
                             <a asp-action="Create"><button type="button" style = "position:relative;
                                        left:950px;background-color:blue;"
                                       class="btn btn-primary "> Create New</button ></a>
                               
                           </div>
        </div>

